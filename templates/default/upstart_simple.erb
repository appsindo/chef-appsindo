#!upstart
# Auto generated - any user modification will be replaced by Chef
# Upstart Script For Simple Nodejs based project for
# (one app that is a non forking one)

# instance  "<%= @name %>"
description "<%= @description %>"
author      "<%= @author %>"
version     "<%= @version %>"

env USER  =<%= @user %>
env GROUP =<%= @group %>
env UMASK =<%= @umask %>
env LOG ="<%= @log_path %>"
env PID ="<%= @pid_path %>"
env APP_PATH  ="<%= @app_path %>"
env BASE_PATH ="<%= @base_path %>"

# When to start and stop the service
<%- if @start_event %>
start on <%= @start_event %>
<%- end %>
<%- if @stop_event %>
stop on <%= @stop_event %>
<%- end %>

# Script Pre and Post
<%- if @pre_start_script %>
pre-start script
    <%= @pre_start_script %>
end script
<%- end %>
<%- if @post_start_script %>
post-start script
    <%= @post_start_script %>
end script
<%- end %>
<%- if @pre_stop_script %>
pre-stop script
    <%= @pre_stop_script %>
end script
<%- end %>
<%- if @post_stop_script %>
post-stop script
    <%= @post_stop_script %>
end script
<%- end %>

# If the process quits unexpectedly trigger a respawn
respawn
<%- if @respawn_limit %>
# if the process crash within <%= @respawn_limit %> constraint then stop
respawn limit <%= @respawn_limit %>
<%- end %>

console log

<%- if !@expect.nil? %>
expect <%= @expect %>
<%- end %>

<%- if @exec_method == 'exec' %>
setuid <%= @user %>
setgid <%= @group %>
umask <%= @umask %>
<%- end %>

# Start the process
<%= @execution %>